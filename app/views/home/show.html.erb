<h1>Find User</h1>
<p>
<%= form_tag('/user/search', method: :get) do -%>
  <div class="form-group">
  <%= label_tag(:email, "Email:") %>
  <%= email_field_tag :email, "", class: "form-control" %>
  </div>
  <div><strong>Or </strong></div>
  <div class="form-group">
  <%= label_tag(:user_id, "User Id (Facebook Id):") %>
  <%= text_field_tag :user_id, "", class: "form-control" %>
  </div>

  <button type="submit" class="btn btn-default">Search</button><% end -%>
</p>

<p>
<%= form_tag('/request/search', method: :get) do -%>
  <div class="form-group">
  <%= label_tag(:session_id, "SessionId:") %>
  <%= email_field_tag :session_id, "", class: "form-control" %>
  </div>
  <button type="submit" class="btn btn-default">Search</button><% end -%>
</p>
